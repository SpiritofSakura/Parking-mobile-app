<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background">



    <TextView
        android:fontFamily="@font/extrabold"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registracija"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        android:gravity="center"
        ></TextView>

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="130dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Uporabniško ime"
        android:inputType="text"
        android:fontFamily="@font/pisava_normal"
        android:stateListAnimator="@drawable/text_animation"
        android:paddingRight="10dp"
        android:paddingLeft="55dp">


    </EditText>

    <EditText
        android:id="@+id/eposta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="200dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/rounded"
        android:drawableLeft="@drawable/ic_outline_email_24"
        android:hint="E-pošta"
        android:paddingRight="10dp"
        android:inputType="textEmailAddress"
        android:paddingTop="12dp"
        android:drawablePadding="15dp"
        android:paddingBottom="12dp"
        android:fontFamily="@font/pisava_normal"
        android:stateListAnimator="@drawable/text_animation"
        android:paddingLeft="15dp">


    </EditText>


    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="270dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/rounded_edittext_pass"
        android:hint="Geslo"
        android:paddingRight="10dp"
        android:inputType="textPassword"
        android:fontFamily="@font/pisava_normal"
        android:stateListAnimator="@drawable/text_animation"
        android:paddingLeft="55dp"
        >
        <!--        android:stateListAnimator="@drawable/text_animation"-->



    </EditText>

    <EditText
        android:id="@+id/password1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="340dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/rounded_edittext_pass"
        android:hint="Potrdi geslo"
        android:inputType="textPassword"
        android:fontFamily="@font/pisava_normal"
        android:stateListAnimator="@drawable/text_animation"
        android:paddingRight="10dp"
        android:paddingLeft="55dp">
        <!--        android:stateListAnimator="@drawable/text_animation"-->



    </EditText>

    <Button
        android:id="@+id/btn_naprej"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="420dp"
        android:layout_marginRight="120dp"
        android:backgroundTint="#728fce"
        android:fontFamily="@font/bold"
        android:text="Naprej"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:padding="10dp"
        android:gravity="center"
        android:textAllCaps="false"
        android:stateListAnimator="@drawable/button_animation"
        ></Button>


    <TextView
        android:id="@+id/domov1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="690dp"
        android:fontFamily="@font/bold"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:stateListAnimator="@drawable/button_animation"
        android:text="Domov"
        android:textColor="#728fce"
        android:textSize="15sp"></TextView>


</RelativeLayout>